 general {
     output_format = "i3bar"
     colors = true
     interval = 1
 }

order += "volume master"
order += "disk /"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "run_watch DHCP"
order += "wireless wlp0s20f3"
order += "battery 0"
order += "memory"
order += "load"
order += "tztime local"

